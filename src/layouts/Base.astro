---
import "../styles/xo.css";

interface Props {
  title?: string;
}

const { title = "XOwlPost" } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <slot name="head"></slot>
  </head>
  <body>
    <main class="container">
      <slot />
    </main>
  </body>
</html>
